<%- include('../partials/start-container.ejs') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <h1><%=project.name%> <span class="badge bg-secondary"><%=project.type%></span></h1>
    <div class="d-flex">
        <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#new-file-modal">New File <i class="bi bi-plus-circle" style="display: inline-block; transform: translateY(-1px);"></i></button>
        <div class="modal fade" id="new-file-modal" tabindex="-1">
            <div class="modal-dialog">
                <form class="modal-content" id="add-file-form">
                    <div class="modal-header">
                        <h5 class="modal-title">New File</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" id="new-file-modal-close"></button>
                    </div>
                    <div class="modal-body d-flex">
                        <input type="text" class="form-control" placeholder="Name" name="name" id="add-file-name">
                        <span class="mx-2">.</span>
                        <input type="text" name="extension" class="form-control" placeholder="Extension" id="add-file-extension" list="types-datalist">
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
        <form id="run-project-form">
            <button class="btn btn-primary me-2">Run</button>
        </form>
        <a href="/projects/<%=project._id%>/settings" class="btn btn-primary me-2">Settings</a>
        <a href="/projects" class="btn btn-primary">Back</a>
    </div>
    <div class="row mt-4 g-3">
        <div class="col-lg-8">
            <div class="d-flex align-items-start">
                <div class="nav flex-column nav-pills me-3" id="v-pills-tab">
                </div>
                <div class="tab-content" id="v-pills-tab-content" style="flex-grow: 1;">
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <button class="nav-link active">Console</button>
                </li>
            </ul>
            <textarea class="form-control" disabled id="console-textarea" style="height: 500px;"></textarea>
        </div>
    </div>
    <script>
        const project = <%- JSON.stringify(project) %>;
    </script>
    <datalist id="types-datalist">
        <% for(const type of types){ %>
            <option value="<%=type%>">
        <% } %>
    </datalist>
    <script src="/js/ace/src-min/ace.js"></script>
    <script src="/js/ace/src-min/ext-language_tools.js"></script>
    <script src="/js/projects/show.js"></script>
<%- include('../partials/end-container.ejs') %>