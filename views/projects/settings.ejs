<%- include('../partials/start-container.ejs') %>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card border-0" style="box-shadow: 0px 0px 21px 8px #0000001f;">
                <div class="card-body">
                    <form class="needs-validation" action="/projects/<%=project._id%>?_method=PATCH" method="POST" novalidate>
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" id="name" placeholder="." name="name" required value="<%=project.name%>">
                            <label for="name">Name</label>
                        </div>
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" id="start" placeholder="." name="start" value="<%=project.start%>">
                            <label for="start">Start</label>
                        </div>
                        <button class="btn btn-primary">Save</button>
                        <a href="/projects/<%=project._id%>" class="btn btn-primary">Back</a>
                    </form>
                    <form action="/projects/<%=project._id%>?_method=DELETE" method="POST" class="mt-2">
                        <button class="btn btn-danger">Delete Project</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/form-validation.js"></script>
<%- include('../partials/end-container.ejs') %>