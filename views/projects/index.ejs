<%- include('../partials/start-container.ejs') %>
    <link rel="stylesheet" href="/css/projects/index.css">
    <link rel="stylesheet" href="/css/project-colors.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <div class="d-flex justify-content-between align-items-center">
        <h1>
            Projects <sup><span class="badge bg-dark rounded-pill"><%=user.projects.length%></span></sup>
        </h1>
        <a href="/projects/new">
            <h1 class="btn btn-primary">New Project <i class="bi bi-plus-circle" style="display: inline-block; transform: translateY(-1px);"></i></h1>
        </a>
    </div>
    <div class="row g-3 mt-1">
        <% for(const project of user.projects){ %>
            <div class="col-md-6 col-lg-4">
                <div class="card card-<%=project.type%>">
                    <div class="card-body d-flex justify-content-between">
                        <div>
                            <h2 class="h5 mb-0"><%=project.name%></h2>
                            <div class="text-muted"><%=project.type%></div>
                            <a href="/projects/<%=project._id%>" class="btn btn-primary mt-2 btn-<%=project.type%>">Enter</a>
                        </div>
                        <div>
                            <img src="/images/<%=project.type%>.png" style="max-width: 100%; height: 75px;">
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <script src="/js/projects/index.js"></script>
<%- include('../partials/end-container.ejs') %>